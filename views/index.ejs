<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs",{ username,isLogedIn}) %>
  
  <div class="blogs content">
    <h2>All Blogs - <%- typeof username !== 'undefined' ? `${username} ` : '<a href="/login" style="all: unset;">Login</a>' %></h2>
    <!-- render HTML content dynamically in EJS templates using `<%- %>` -->


    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a class="single" href="/blogs/<%= blog._id %>">
          <h3 class="title"><%= blog.title %></h3>
          <p class="snippet"><%= blog.snippet %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
  <script>
    
    
    
  </script>
</body>
</html>